<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:elevation="7dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="15dp">

        <ImageView
            android:id="@+id/drinkImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/drinkLoader"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_shimmer_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drinkTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/falling_sky_medium"
            android:maxLines="2"
            android:textColor="@color/main_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/drinkImage"
            app:layout_constraintTop_toTopOf="@+id/drinkImage"
            tools:text="sdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasda" />

        <TextView
            android:id="@+id/drinkSubTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:fontFamily="@font/falling_sky_small"
            android:maxLines="3"
            android:textColor="@color/second_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/drinkImage"
            app:layout_constraintEnd_toEndOf="@+id/drinkTitle"
            app:layout_constraintStart_toStartOf="@+id/drinkTitle"
            app:layout_constraintTop_toBottomOf="@+id/drinkTitle"
            tools:text="sdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasdasdadadasdadasda" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>