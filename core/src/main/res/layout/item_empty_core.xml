<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/falling_sky_medium"
        android:gravity="center"
        android:text="@string/empty_search_results"
        android:textColor="@color/main_dark"
        android:layout_marginTop="-75dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/startCoreLottie"
        app:layout_constraintStart_toStartOf="@+id/startCoreLottie"
        app:layout_constraintTop_toBottomOf="@+id/startCoreLottie" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/startCoreLottie"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/empty_search_result" />

</androidx.constraintlayout.widget.ConstraintLayout>