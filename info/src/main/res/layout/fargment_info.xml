<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bs_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_line_bs_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iconInfo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:textColor="@color/main_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconInfo"
                tools:text="@string/drink_name" />

            <TextView
                android:id="@+id/instructionInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:textColor="@color/main_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/titleInfo"
                app:layout_constraintStart_toStartOf="@+id/titleInfo"
                app:layout_constraintTop_toBottomOf="@+id/titleInfo"
                tools:text="@string/drink_instruction" />

            <TextView
                android:id="@+id/categoryDrinkInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:textColor="@color/main_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/instructionInfo"
                app:layout_constraintStart_toStartOf="@+id/instructionInfo"
                app:layout_constraintTop_toBottomOf="@+id/instructionInfo"
                tools:text="@string/drink_category" />

            <TextView
                android:id="@+id/alcoholicDrinkInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:textColor="@color/main_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/categoryDrinkInfo"
                app:layout_constraintStart_toStartOf="@+id/categoryDrinkInfo"
                app:layout_constraintTop_toBottomOf="@+id/categoryDrinkInfo"
                tools:text="@string/drink_alcoholic" />

            <TextView
                android:id="@+id/glassDrinkInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:textColor="@color/main_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/alcoholicDrinkInfo"
                app:layout_constraintStart_toStartOf="@+id/alcoholicDrinkInfo"
                app:layout_constraintTop_toBottomOf="@+id/alcoholicDrinkInfo"
                tools:text="@string/drink_glass" />

            <TextView
                android:id="@+id/ingredientsDrinkInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/falling_sky_medium"
                android:text="@string/drink_ingredients"
                android:textColor="@color/main_dark"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/glassDrinkInfo"
                app:layout_constraintStart_toStartOf="@+id/glassDrinkInfo"
                app:layout_constraintTop_toBottomOf="@+id/glassDrinkInfo" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/ingredientsLayout"
                android:layout_width="0dp"
                android:layout_height="400dp"
                app:alignContent="stretch"
                app:alignItems="stretch"
                app:flexWrap="wrap"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ingredientsDrinkInfo"
                app:layout_constraintStart_toStartOf="@+id/ingredientsDrinkInfo"
                app:layout_constraintTop_toBottomOf="@+id/ingredientsDrinkInfo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>