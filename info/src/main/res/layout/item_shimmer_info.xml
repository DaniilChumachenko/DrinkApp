<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/core_drink_height"
        android:background="@drawable/bs_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconInfo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bg_shimmer_big_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/titleInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconInfo" />

        <View
            android:id="@+id/instructionInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="@+id/titleInfo"
            app:layout_constraintStart_toStartOf="@+id/titleInfo"
            app:layout_constraintTop_toBottomOf="@+id/titleInfo" />

        <View
            android:id="@+id/categoryDrinkInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="@+id/instructionInfo"
            app:layout_constraintStart_toStartOf="@+id/instructionInfo"
            app:layout_constraintTop_toBottomOf="@+id/instructionInfo" />

        <View
            android:id="@+id/alcoholicDrinkInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="@+id/categoryDrinkInfo"
            app:layout_constraintStart_toStartOf="@+id/categoryDrinkInfo"
            app:layout_constraintTop_toBottomOf="@+id/categoryDrinkInfo" />

        <View
            android:id="@+id/glassDrinkInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="@+id/alcoholicDrinkInfo"
            app:layout_constraintStart_toStartOf="@+id/alcoholicDrinkInfo"
            app:layout_constraintTop_toBottomOf="@+id/alcoholicDrinkInfo" />

        <View
            android:id="@+id/ingredientsDrinkInfo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_shimmer_text"
            app:layout_constraintEnd_toEndOf="@+id/glassDrinkInfo"
            app:layout_constraintStart_toStartOf="@+id/glassDrinkInfo"
            app:layout_constraintTop_toBottomOf="@+id/glassDrinkInfo" />

        <View
            android:id="@+id/ingredientsLayout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_shimmer_text"
            android:paddingBottom="30dp"
            app:layout_constraintEnd_toEndOf="@+id/ingredientsDrinkInfo"
            app:layout_constraintStart_toStartOf="@+id/ingredientsDrinkInfo"
            app:layout_constraintTop_toBottomOf="@+id/ingredientsDrinkInfo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>